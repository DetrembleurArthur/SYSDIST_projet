<?xml version="1.0"  encoding="UTF-8"?>
<persistence  xmlns="http://java.sun.com/xml/ns/persistence"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              version="1.0"  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
              http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit  name="test">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.bourgedetrembleur.hepl.modele.Item</class>
        <class>com.bourgedetrembleur.hepl.modele.Article</class>
        <class>com.bourgedetrembleur.hepl.modele.Command</class>
        <class>com.bourgedetrembleur.hepl.modele.Client</class>
        <class>com.bourgedetrembleur.hepl.modele.Category</class>
        <class>com.bourgedetrembleur.hepl.modele.Payement</class>
        <class>com.bourgedetrembleur.hepl.modele.Stock</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>


            <property name="hibernate.connection.url"
                      value="jdbc:mysql://localhost:3306/ecommerce_db?serverTimezone=UTC"/>
            <property name="hibernate.connection.driver_class"
                      value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username"
                      value="root"/>
            <property name="hibernate.connection.password"
                      value="13Mysql53"/>


            <!-- DB schema will be updated if needed -->
            <property name="hibernate.hbm2ddl.auto"
                      value="update"/>
        </properties>
    </persistence-unit>
</persistence>